<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppLocalizador.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Busque e Encontre!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Image Source="xamarin_essentials" VerticalOptions="Center" HorizontalOptions="Center"/>
        <Label Text="País"/>
        <Entry x:Name="txtPais" TextColor="Black"/>
        <Label Text="UF"/>
        <Entry x:Name="txtUF" TextColor="Black"/>
        <Label Text="Local/Logradouro"/>
        <Entry x:Name="txtLocal" TextColor="Black"/>
        <Label Text="Cidade"/>
        <Entry x:Name="txtCidade" TextColor="Black"/>
        <Button Text="Localizar" Clicked="Button_Clicked"/>        
    </StackLayout>
</ContentPage>
